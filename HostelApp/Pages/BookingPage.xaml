<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HostelApp.Pages.BookingPage"
             Title="Бронирования">
  <StackLayout Spacing="10">
    <SearchBar x:Name="SearchBar" Placeholder="Поиск: гость/номер/статус" />
    <Button Text="Новая бронь" Clicked="OnNewBooking" />
    <ListView x:Name="BookingsList" HasUnevenRows="True" SeparatorVisibility="None" SelectionMode="None">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Frame>
              <StackLayout Spacing="6">
                <Label Text="{Binding TitleRu}" FontAttributes="Bold" />
                <Label Text="{Binding StatusRu}" />
                <Grid ColumnSpacing="8">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Button Grid.Column="0" Text="Заселить" Clicked="OnCheckIn" />
                  <Button Grid.Column="1" Text="Выселить" Clicked="OnCheckOut" />
                </Grid>
              </StackLayout>
            </Frame>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>
